<!-- invoice.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

    <style>
      body {
        margin: 20px;
        line-height: 1.6;
        color: #333;
      }

      h1 {
        color: #333;
        border-bottom: 2px solid #333;
        padding-bottom: 10px;
      }

      h2 {
        color: #555;
        border-bottom: 1px solid #ccc;
        padding-bottom: 5px;
        margin-bottom: 15px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        border: 1px solid #ddd;
      }

      th,
      td {
        padding: 10px;
        text-align: left;
      }

      th {
        background-color: #f2f2f2;
        font-weight: bold;
      }

      tr:nth-child(even) {
        background-color: #f9f9f9;
      }

      .meta {
        margin-bottom: 30px;
      }

      .total {
        font-weight: bold;
        margin-top: 20px;
        padding-top: 15px;
        border-top: 1px solid #ccc;
      }

      .terms {
        font-size: 0.9em;
        color: #666;
      }

      .company-info {
        margin-bottom: 30px;
      }

      .company-info p {
        margin: 0;
        line-height: 1.4;
      }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>

    <div class="company-info">
      <p><strong><%= entity.org.name %></strong></p>
      <p><%= entity.org.address %></p>
      <p>GST No: <%= entity.org.gstNo %></p>
      <p>PAN No: <%= entity.org.panNo %></p>
    </div>

    <div class="meta">
      <h2><%= partyMetaHeading %></h2>
      <p><strong><%= entity.customer.name %></strong></p>
      <p>GST No: <%= entity.customer.gstNo %></p>
      <p>PAN No: <%= entity.customer.panNo %></p>
    </div>

    <div class="meta">
      <h2><%= billMetaHeading %></h2>
      <p>Invoice No: <%= entity.num %></p>
      <% if (entity.poNo) { %>
      <p>PO No: <%= entity?.poNo %></p>
      <% } %> <% if (entity.poDate) { %>
      <p>PO Date: <%= new Date(entity?.poDate).toDateString() %></p>
      <% } %>
    </div>

    <table>
      <thead>
        <tr>
          <th>Item</th>
          <th>GST</th>
          <th>HSN/SAC Code</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.gst %></td>
          <td><%= item.code %></td>
          <td><%= item.quantity %></td>
          <td><%= item.price %></td>
          <td><%= item.total %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="total">
      <p>Total: <%= total %></p>
      <p>SGST: <%= sgst %></p>
      <p>CGST: <%= cgst %></p>
      <p>IGST: <%= igst %></p>
      <p>Grand Total: <%= grandTotal %></p>
    </div>
    <h2>Terms & Conditions</h2>
    <p class="terms"><%= entity.terms %></p>
  </body>
</html>
